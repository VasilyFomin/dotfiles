" Use Vim settings, rather than Vi settings (much better!).
" This must be first, because it changes other options as a side effect.
set nocompatible
filetype off
behave mswin
" Minimal window height
set winminheight=0
" Minimal window width
set winminwidth=0
" Always show status panel
set laststatus=2
" In many terminal emulators the mouse works just fine, thus enable it.
if has('mouse')
  set mouse=a
endif
" Autocomplete
set completeopt=menu
" Tab size
set tabstop=4
" Shifting size for commands << and >>
set shiftwidth=4
" Copy indent from previous line
set autoindent
" Enable smartindent
set smartindent
" Wrap text
set wrap
" Wrap by words, instead of letters
set linebreak
" Show current cmd
set showcmd
" Configure statusbar line
set statusline=%<%f%h%m%r%=file=%{&fileencoding}\ enc=%{&encoding}\ %l,%c%V
" Highlight search pattern
set hlsearch
" Enable incremental search
set incsearch
" Perform case insensitive search
set ignorecase
" Don't create backup files
set nobackup
" Don't create swap files
set noswapfile
" Auto detect next encodings
set fileencodings=utf-8,cp1251,koi8-r,cp866
" Auto move cursor on th next line when navigating with arrow keys
set whichwrap=b,s,<,>,[,],l,h
" switch syntax highlighting on
syntax on
" configure molokai theme
if &t_Co >= 256 || has("gui_running")
   let g:molokai_original=1
   colorscheme molokai
endif
" Show lines numbers
set nu
" Set $ at the end of affected change
set cpoptions+=$ 
" Configure pathogen
call pathogen#helptags()
call pathogen#runtime_append_all_bundles()
" Configure Vundle
set rtp+=$VIM/vimfiles/bundle/vundle/
call vundle#rc('$VIM/vimfiles/bundle/')
"Vundle repositories
Bundle 'L9'
Bundle 'FuzzyFinder'
